---
import Layout from "../layouts/Layout.astro";
import { CarouselDemo } from "@/components/CarouselDemo";
import { NavbarDemo } from "@/components/resizable-navbar";
import { StickyBannerDemo } from "@/components/sticky-banner";
import { WavyBackground } from "@/components/ui/wavy-background";
import { CardHoverEffectDemo } from "@/components/card-hover-effectDemo";
import { TextGenerateEffect } from "@/components/ui/text-generate-effect";
import { LayoutGridDemo } from "@/components/layout-gridDemo";

import { BentoGridDemo } from "@/components/bento-grid-premios";
import { Footer } from "@/components/footer";
import { AnimatedTestimonialsDemo } from "@/components/animated-testimonials-demo";

const words = `Los mejores sorteos y premios estan a tu alcance.`;
const words2 = `Inscríbete para ser ganador de grandes premios semana a semana, con tan solo S/ 10 al mes. Recibe la Revista REMATES PERU todos los Martes`;
---

<StickyBannerDemo client:load />
<Layout title="Sorteos CAMI">
  <NavbarDemo client:load />
  <main class="w-full h-full">
    <div class="w-[90%] mx-auto p-8 pt-5 flex justify-center items-center">
      <div class="w-1/4">
        <TextGenerateEffect client:load words={words} variant="title" />

        <TextGenerateEffect client:load words={words2} variant="subtitle" />
      </div>
      <div class="w-3/5">
        <LayoutGridDemo />
      </div>
    </div>

    <div class="w-full min-h-[10vh] py-8 md:py-12 lg:h-[30vh] lg:py-0">
      <WavyBackground client:load>
        <p
          class="text-xl sm:text-2xl md:text-4xl lg:text-7xl text-white font-bold inter-var text-center mb-6 md:mb-10 px-4"
        >
          El sorteo comienza en:
        </p>
        <div
          class="flex items-center justify-center gap-2 sm:gap-3 md:gap-4 mb-8 md:mb-12 px-4 flex-wrap"
        >
          <!-- Días -->
          <div
            class="bg-gradient-to-br from-red-400 to-red-600 rounded-2xl md:rounded-3xl p-3 md:p-4 lg:p-6 w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-32 lg:h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div
              id="days"
              class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-1"
            >
              00
            </div>
            <div class="text-white text-xs sm:text-sm font-medium opacity-90">
              Días
            </div>
          </div>

          <span class="text-2xl sm:text-3xl md:text-4xl font-bold text-white"
            >:</span
          >

          <!-- Horas -->
          <div
            class="bg-gradient-to-br from-red-400 to-red-600 rounded-2xl md:rounded-3xl p-3 md:p-4 lg:p-6 w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-32 lg:h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div
              id="hours"
              class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-1"
            >
              00
            </div>
            <div class="text-white text-xs sm:text-sm font-medium opacity-90">
              Horas
            </div>
          </div>

          <span class="text-2xl sm:text-3xl md:text-4xl font-bold text-white"
            >:</span
          >

          <!-- Minutos -->
          <div
            class="bg-gradient-to-br from-red-400 to-red-600 rounded-2xl md:rounded-3xl p-3 md:p-4 lg:p-6 w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-32 lg:h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div
              id="minutes"
              class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-1"
            >
              00
            </div>
            <div class="text-white text-xs sm:text-sm font-medium opacity-90">
              Minutos
            </div>
          </div>

          <span class="text-2xl sm:text-3xl md:text-4xl font-bold text-white"
            >:</span
          >

          <!-- Segundos -->
          <div
            class="bg-gradient-to-br from-red-400 to-red-600 rounded-2xl md:rounded-3xl p-3 md:p-4 lg:p-6 w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-32 lg:h-32 flex flex-col items-center justify-center shadow-xl"
          >
            <div
              id="seconds"
              class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-1"
            >
              00
            </div>
            <div class="text-white text-xs sm:text-sm font-medium opacity-90">
              Segundos
            </div>
          </div>
        </div>
      </WavyBackground>
    </div>

    <div class="max-w-[90%] mx-auto px-4" id="premios">
      <p
        class="text-xl sm:text-2xl md:text-4xl lg:text-5xl text-white font-bold inter-var text-center uppercase mt-12 mb-12 md:mt-24"
      >
        Premiazos que puedes ganar
      </p>
      <!-- <CarouselDemo client:load /> -->
      <BentoGridDemo client:load />
    </div>

    <!-- <HeroParallaxDemo client:load/> -->

    <section id="ganadores">
      <p
        class="text-xl sm:text-2xl md:text-4xl lg:text-5xl text-white font-bold inter-var text-center uppercase mt-12 md:mt-24"
      >
        Ganadores
      </p>
      <!-- <CardHoverEffectDemo client:load /> -->
      <AnimatedTestimonialsDemo client:load />
    </section>

    <Footer />
  </main>
</Layout>
